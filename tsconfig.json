{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "module": "CommonJS",
        "outDir": "dist",
        "lib": ["dom", "es2015"],
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "alwaysStrict": true,
    },
    "include": ["./src"]
}